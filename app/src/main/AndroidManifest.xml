<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.strider_sol.multitoolapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".common.NotepadActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".drawing.DrawingActivity"
            android:label="@string/title_activity_drawing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".movie.MovieActivity"
            android:label="@string/title_activity_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".reminder.RemainderActivity"
            android:label="@string/title_activity_remainder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".todo.ToDoActivity"
            android:label="@string/title_activity_to_do"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
