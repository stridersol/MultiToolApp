<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary1"
    tools:context="com.example.strider_sol.multitoolapp.common.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_drawer_primary"
                android:gravity="center"
                android:text="Choose Default App"
                android:textColor="@color/cardview_light_background"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:background="@color/colorAccent"
            android:elevation="2dp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/sinere"
                android:gravity="center_horizontal">

                <RadioButton
                    android:id="@+id/radioNotepad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Notepad"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/radioToDo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="ToDo List"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/radioDrawing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Drawing"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/radioReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Reminder"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/radioMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Movie List"
                    android:textSize="25sp" />
            </RadioGroup>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>
